<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Divider_Home">
        <!-- Divides the categories -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



    <style name="MainListColumnNamesText" parent="AutoSizeText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:lines">2</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoSizeMaxTextSize">12sp</item>
    </style>

    <style name="MainListItemPrimeText" parent="AutoSizeText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textDirection">firstStrongLtr</item>
    </style>

    <style name="MainListItemText" parent="AutoSizeText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/colorForMainListItemText</item>
        <item name="android:textDirection">firstStrongLtr</item>
        <item name="autoSizeMaxTextSize">14sp</item>
    </style>

    <style name="AddSearchListItemPrimeText" parent="AutoSizeText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textDirection">firstStrongLtr</item>
    </style>

    <style name="AddSearchListItemText" parent="AutoSizeText">
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:textDirection">firstStrongLtr</item>
    </style>

    <style name="AutoSizeText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">7sp</item>
    </style>

    <style name="FlipView">
        <item name="android:layout_height">@dimen/cardview_list_item_image_width_height</item>
        <item name="android:layout_width">@dimen/cardview_list_item_image_width_height</item>
        <item name="android:padding">4dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="checked">false</item>
        <item name="frontBackgroundColor">@color/colorRed</item>
        <item name="frontLayout">@layout/flipview</item>
        <item name="rearBackgroundColor">@color/colorForImageIconRearBackground</item>
        <item name="rearImageAnimationDelay">0</item>
        <item name="enableInitialAnimation">false</item>
    </style>
</resources>